root = true

# GDScript 文件配置
[*.gd]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# GDResource 文件配置
[*.tres]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true

# GDScene 文件配置
[*.tscn]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true

# GDSHader 文件配置
[*.gdshader]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true

# Markdown 文件配置
[*.md]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JSON 文件配置
[*.json]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true

# YAML 文件配置
[*.{yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true

# 项目配置文件
[project.godot]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true

# 导出配置文件
[export_presets.cfg]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
